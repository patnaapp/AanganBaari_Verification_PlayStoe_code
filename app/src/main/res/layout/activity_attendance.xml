<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".activity.AttendanceActivity">
    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/btn_submit"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="यूजर का नाम"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold|normal" />

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/tv_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:text="Kumar Shubham"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Role"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold|normal"/>

                            <TextView
                                android:id="@+id/tv_role"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:textSize="14sp"
                                android:text="AE"
                                android:textColor="@android:color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="जिला"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold|normal"/>

                            <TextView
                                android:id="@+id/tv_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Patna"
                                android:textColor="@android:color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="प्रोजेक्ट का नाम "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold|normal"/>

                            <TextView
                                android:id="@+id/tv_block"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text=""
                                android:textColor="@android:color/black"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="पंचायत का नाम"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold|normal"/>

                            <TextView
                                android:id="@+id/tv_panchayat11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text=" "
                                android:textColor="@android:color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="आंगनवाड़ी का नाम"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold|normal"/>

                            <TextView
                                android:id="@+id/tv_aanganwadi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text=""
                                android:textColor="@android:color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_panchayat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textSize="14sp"
                        android:text="पंचायत: "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

                <!--                <LinearLayout-->
                <!--                    android:layout_weight="0.2"-->
                <!--                    android:gravity="center_vertical"-->
                <!--                    android:layout_width="44dp"-->
                <!--                    android:layout_marginRight="4dp"-->
                <!--                    android:layout_height="match_parent">-->

                <!--                    <Button-->
                <!--                        android:id="@+id/btn_logout"-->
                <!--                        android:layout_width="40dp"-->
                <!--                        android:layout_height="40dp"-->
                <!--                        android:background="@drawable/logout1"-->
                <!--                        android:textColor="@color/colorPrimaryDark"/>-->
                <!--                </LinearLayout>-->

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="4dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="वित्तीय महीना*"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spin_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg_new"
                        android:imeOptions="actionUnspecified"
                        android:paddingRight="10dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#43D305" />

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:paddingTop="8dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_labharthitype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" लाभार्थी का प्रकार *"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spin_labharthitype"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_bg_new"
                        android:imeOptions="actionUnspecified"
                        android:paddingRight="10dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#43D305" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_margin="6dp"
                android:padding="8dp"
                android:layout_below="@+id/ll_compliance_details"
                android:id="@+id/ll_sinchit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:weightSum="2"
                    android:layout_below="@+id/header"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout

                            android:layout_marginTop="5dp"
                            android:id="@+id/rl_adhar_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:background="@drawable/rect"
                            >

                            <ImageView
                                android:id="@+id/take_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>

                            <LinearLayout
                                android:id="@+id/take_pic_water_res"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_action_photo"
                                    android:id="@+id/imageView" />
                                <LinearLayout
                                    android:id="@+id/take_pic_anganbari111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:textColor="@color/holo_red_dark"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="15dp"
                                        android:text="Photo 1*"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20dp"
                                        android:visibility="gone"
                                        android:textColor="@color/holo_red_dark"
                                        android:layout_gravity="center_vertical"
                                        android:text="*"/>
                                </LinearLayout>
                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_anya_watersourse"
                android:layout_width="match_parent"
                android:layout_below="@+id/ll_sinchit1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_anya_watersourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="उपस्तिथ लाभुको की संख्या"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edt_no_of_ben"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/textboxshape2"
                    android:hint="लाभार्थियों की संख्या"
                    android:imeOptions="actionUnspecified"
                    android:paddingRight="20dp"
                    android:inputType="number"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#43D305" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/btn_submit"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttonshape"
        android:text="सत्यापन करे"
        android:layout_above="@+id/footer"
        android:textColor="@color/color_white"
        android:textSize="17sp" />
    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />



</RelativeLayout>