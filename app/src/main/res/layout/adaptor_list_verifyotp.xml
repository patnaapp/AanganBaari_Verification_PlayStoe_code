<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="4dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lin_women"
            android:background="#8D8D8D"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="सदस्य का विवरण"
            android:textStyle="bold"
            android:visibility="gone" />
        <LinearLayout

            android:id="@+id/lin_ben_child"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_slno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:text="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_toRightOf="@+id/tv_slno"
                    android:visibility="visible"
                    android:weightSum="3"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:text="लाभार्थी आईडी"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"

                        android:textStyle="bold"

                        android:textSize="13sp"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_benif_Id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="Benif Id"></TextView>



                    <CheckBox

                        android:textColor="@android:color/black"
                        android:layout_weight="0.5"
                        android:id="@+id/checkBox1"
                        android:visibility="gone"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"/>




                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:visibility="visible"

                android:weightSum="3"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="खता संख्या "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"

                    android:textStyle="bold"

                    android:textSize="13sp"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_yr_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="NA"></TextView>




                <CheckBox

                    android:textColor="@android:color/black"
                    android:layout_weight="0.5"
                    android:id="@+id/checkBox"
                    android:visibility="gone"
                    android:layout_width="35dp"

                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:weightSum="3"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="पिता का नाम"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="लाभार्थी  का नाम"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="माता का नाम'"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:textStyle="bold" />




            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_child12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:visibility="visible"
                android:weightSum="3">
                    <TextView
                        android:id="@+id/txt_f_and_mName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Ramesh"></TextView>

                    <TextView
                        android:id="@+id/txt_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="2016"></TextView>

                    <TextView
                        android:id="@+id/tv_motherNAme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Ramesh"></TextView>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="पोषण का प्रकार"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="लाभार्थी का प्रकार"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="केटेगरी"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:id="@+id/lin_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:visibility="visible"
                    android:weightSum="3">


                    <TextView
                        android:id="@+id/txt_NutritionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="NA"></TextView>

                    <TextView
                        android:id="@+id/txt_benifType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="NA"></TextView>


                    <TextView
                        android:id="@+id/txt_aadhar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="पुरुष"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:padding="3dp"
                    android:id="@+id/ll_otp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <EditText
                        android:id="@+id/edt_no_month_child"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="ओटीपि डालें"
                        android:maxLength="5"
                        android:inputType="phone"
                        android:minEms="5"
                        android:textSize="13sp"></EditText>

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:background="@color/holo_green_dark"
                        android:text="सत्यापित करे"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"></Button>


                </LinearLayout>
                <TextView

                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_verified"
                    android:textColor="@color/holo_green_dark"
                    android:textStyle="bold"
                    android:text="VERIFIED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/lin_child1"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="गर्भवती महिला"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="हाँ"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>